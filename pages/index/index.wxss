.section{
    display: flex;
    flex-direction: row;
    margin: 20rpx;
}
.section view{
    margin-right: 20rpx;
}
.btn-area{
    margin: 20rpx;
}
button{
    margin: 10rpx 0;
}
.item_content{
    width: 90%;
    height: 100rpx;
    font-size: 11pt;
    color: #888;
    word-break: break-all;
    text-overflow: ellipsis;
    overflow: hidden;
}
.item_from{
    width: 550rpx;
    font-size: 10pt;
    color: #999;
}
.item_time{
    width: 100%;
    font-size: 10pt;
    color: #999;
    word-break: break-all;
    text-overflow: ellipsis;
    overflow: hidden;
    margin-left: 40rpx;
}
.hover-class{
    background-color: #A4D3EE;
}
