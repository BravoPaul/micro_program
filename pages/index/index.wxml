<view class="cu-bar bg-white solid-bottom">
    <view class="solid-bottom text-xl padding">
        <text class="text-black text-bold">高考信息查询</text>
    </view>
</view>

<view class="cu-list grid col-{{gridCol}} {{gridBorder?'':'no-border'}}">
    <view class="cu-item" wx:for="{{iconList}}" wx:key wx:if="{{index<gridCol*2}}" bind:tap="handlePushAbout">
        <view class="cuIcon-{{item.icon}} text-{{item.color}}">
            <view class="cu-tag badge" wx:if="{{item.badge!=0}}">
                <block wx:if="{{item.badge!=1}}">{{item.badge>99?"99+":item.badge}}</block>
            </view>
        </view>
        <text>{{item.name}}</text>
    </view>
</view>
<view class="cu-bar bg-white solid-bottom">
    <view class="solid-bottom text-xl padding">
        <text class="text-black text-bold">高考智能志愿填报</text>
    </view>
</view>
<view class="cu-form-group">
    <view class="title">省份</view>
    <picker mode="region" bindchange="RegionChange" value="{{region}}" custom-item="{{customItem}}">
        <view class="picker">{{region[0]}}</view>
    </picker>
</view>
<view class="cu-form-group">
    <view class="page-section">
        <label class="radio">
            <radio value="r1" checked="true" />
            文科
        </label>
        <label class="radio">
            <radio value="r2" />
            理科
        </label>
    </view>
</view>
<view class="cu-form-group">
    <input placeholder="请输入高考分数"></input>
</view>
<view class="cu-bar bg-white solid-bottom">
    <view class="padding flex flex-direction" style="width:100%">
        <button class="cu-btn bg-red margin-tb-sm lg">智能填报</button>
    </view>
    <view class="padding flex flex-direction" bind:tap="go_test_page" style="width:100%">
        <button class="cu-btn bg-red margin-tb-sm lg">test</button>
    </view>
</view>